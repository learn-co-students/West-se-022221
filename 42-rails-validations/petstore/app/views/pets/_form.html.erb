
<div class="ui segment">
  <%= form_for @pet , html: { class: "ui form" } do |f| %>
    Pet Name: <%= f.text_field :name %><br />
    Pet Breed: <%= f.text_field :breed %><br />
    Select Store:
    <%= f.collection_select :store_id, Store.all, :id, :name %><br />

    <%= f.submit "Create", class: 'positive ui button' %>
  <% end %>
</div>
