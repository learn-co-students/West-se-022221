<h1>All recipes</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query %>
  <%= form.submit "Search" %>
<% end %>

<ul>
  <% @recipes.each do |recipe| %>
    <li> <%= recipe.name %> </li>
    <li> <%= recipe.ingredients.length %> </li>
  <% end %>
</ul>
