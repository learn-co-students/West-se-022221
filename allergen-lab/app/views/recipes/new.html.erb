<h1> Create new recipe </h1>

<%= form_for @recipe do |f| %>
  Name: <%= f.text_field :name %> <br />
  Author: <%= f.collection_select :user_id, User.all, :id, :name %> <br />
  Ingredient: <%= f.collection_check_boxes :ingredient_ids, Ingredient.all, :id, :title %> <br />
  <%= f.submit %>
<% end %>
